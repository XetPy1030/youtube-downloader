# ===========================================
# ОБЩИЕ ПЕРЕМЕННЫЕ
# ===========================================

# Пароль для PostgreSQL
POSTGRES_PASSWORD=your_secure_password_here

# ===========================================
# ПЕРЕМЕННЫЕ ДЛЯ ПРОДАКШЕНА (profile: production)
# ===========================================

# Токен Telegram бота
BOT_TOKEN=your_bot_token_here

# ID администраторов (через запятую)
ADMIN_IDS=123456789,987654321

# Настройки базы данных
DATABASE_URL=postgres://bot_user:your_password@localhost:5432/youtube_bot

# Настройки Redis (опционально)
REDIS_URL=redis://localhost:6379/0

# Настройки скачивания
DOWNLOAD_PATH=./downloads

# Максимальная длительность видео в секундах (по умолчанию: 3600 = 1 час)
MAX_VIDEO_DURATION=3600

# Максимальный размер файла в байтах (по умолчанию: 52428800 = 50MB)
MAX_FILE_SIZE=52428800

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Ограничения по частоте запросов
RATE_LIMIT_REQUESTS=5

# ===========================================
# ПЕРЕМЕННЫЕ ДЛЯ РАЗРАБОТКИ (profile: development)
# ===========================================

# Порты для локального доступа
# Установите эти переменные для запуска портов в режиме разработки
# Если не установлены - порты не будут открыты (режим продакшена)

DB_PORT=5432
REDIS_PORT=6379

# Для разработки можно использовать простой пароль
# POSTGRES_PASSWORD=dev_password